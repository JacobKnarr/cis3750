<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme.Light">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="AppTheme.Light" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/monsoon</item>
        <item name="android:textColorPrimary">@color/CLCGreen</item>
        <item name="android:textColorSecondary">@color/CLCBlue</item>
        <item name="android:textColorHint">@color/monsoon</item>
        <item name="android:background">@color/white</item>
        <item name="drawerArrowStyle">@style/newDrawerArrowToggleLight</item>
        <item name="android:buttonStyle">@style/LightButton</item>
    </style>

    <style name="AppTheme.Dark" parent="AppTheme.Light">
        <item name="colorAccent">@color/monsoon</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorPrimary">@color/CLCGreen</item>
        <item name="android:textColorSecondary">@color/CLCBlue</item>
        <item name="android:textColorHint">@color/aluminum</item>
        <item name="android:background">@color/black</item>
        <item name="drawerArrowStyle">@style/newDrawerArrowToggleDark</item>
        <item name="android:buttonStyle">@style/DarkButton</item>
    </style>

    <style name="AppTheme.Dark.Dialog" parent="Theme.AppCompat.Dialog">
        <item name="colorAccent">@color/monsoon</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorPrimary">@color/CLCGreen</item>
        <item name="android:textColorSecondary">@color/CLCBlue</item>
        <item name="android:textColorHint">@color/aluminum</item>
        <item name="android:background">@color/jet</item>
        <item name="drawerArrowStyle">@style/newDrawerArrowToggleDark</item>
        <item name="android:buttonStyle">@style/DarkButton</item>
        <item name="android:textColorAlertDialogListItem">@color/white</item>
    </style>

    <style name="AppTheme.Colour.Dialog" parent="Theme.AppCompat.Dialog">
        <item name="colorAccent">@color/white</item>
        <item name="android:textColorPrimary">@color/CLCGreen</item>
        <item name="android:background">@color/CLCBlue</item>
    </style>

    <style name="AppTheme.Light.Dialog" parent="Theme.AppCompat.Dialog">
        <item name="colorAccent">@color/monsoon</item>
        <item name="android:textColor">@color/CLCGreen</item>
        <item name="android:textColorPrimary">@color/CLCGreen</item>
        <item name="android:textColorSecondary">@color/CLCBlue</item>
        <item name="android:textColorHint">@color/monsoon</item>
        <item name="android:background">@color/white</item>
        <item name="drawerArrowStyle">@style/newDrawerArrowToggleLight</item>
        <item name="android:buttonStyle">@style/LightButton</item>
        <item name="android:textColorAlertDialogListItem">@color/black</item>
    </style>

    <style name="newDrawerArrowToggleLight" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/black</item>
    </style>

    <style name="newDrawerArrowToggleDark" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/irite</item>
    </style>

    <style name="DarkButton" parent="@android:style/Widget.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/monsoon</item>
    </style>

    <style name="LightButton" parent="@android:style/Widget.Button">
        <item name="android:textColor">@color/CLCGreen</item>
        <item name="android:background">@color/whitish</item>
    </style>

    <style name="AppTheme.Light.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.Light.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>


</resources>
